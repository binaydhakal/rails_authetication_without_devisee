<h1 class="mt-5">Sign Up</h1>

<% if @user.errors.any? %>
    <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |msg| %>
            <div><%= msg %></div>
        <% end %>
    </div>
<% end %>

<%= form_with model: @user, url: sign_up_path do |form| %>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <%= form.text_field :name, class: "form-control", placeholder: "Type your name" %>
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <%= form.text_field :email, class: "form-control", placeholder: "Type your Email" %>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <%= form.password_field :password, class: "form-control", placeholder: "Type your Password" %>
    </div>
    <div class="mb-3">
        <label class="form-label">Password Confirmation</label>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Re-type your Password" %>
    </div>
    <div class="mb-3">
        <%= form.submit "Create my account", class: "btn btn-primary" %>
    </div>
<% end %>