<h1 class="mt-5">Sign In</h1>

<%= form_with url: sign_in_path do |form| %>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <%= form.text_field :email, class: "form-control", placeholder: "Type In Email" %>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <%= form.password_field :password, class: "form-control", placeholder: "Type In Password" %>
    </div>
    <%= link_to "Forgot Password?", password_reset_path %>
    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
<% end %>